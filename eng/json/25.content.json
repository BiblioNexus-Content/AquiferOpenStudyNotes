    "reference_id": 19185,
    "title": "Lamentations 2:16",
    "media_type": "Text",
    "index_reference": "25002016",
    "language": "eng",
    "content": "<p>Their enemies were glad that Jerusalem was defeated.</p>",
    "associations": {
      "passage": [
        {
          "start_ref": "25002016",
          "start_ref_usfm": "LAM 2:16",
          "end_ref": "25002016",
